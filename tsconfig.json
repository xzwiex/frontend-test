{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": [
      "dom",
      "esnext",
    ],
    "jsx": "react-jsx",
    "baseUrl": "./",
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
